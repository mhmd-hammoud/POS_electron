{
	"name": "electron-sqlite",
	"description": "SQLite Integration with Electron App",
	"version": "0.1.0",
	"main": "public/electron.js",
	"private": true,
	"author": "Arindam Chowdhury",
	"homepage": "./",
	"dependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^13.5.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1",
		"sequelize": "^6.37.7",
		"sqlite3": "^5.1.7",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"rebuild-app": "electron-builder install-app-deps",
		"electron": "wait-on tcp:3000 && electron .",
		"start-electron-app": "concurrently -k \"cross-env BROWSER=none npm run start\" \"cross-env NODE_ENV=development  npm run electron\"",
		"clean": "rimraf build dist",
		"prepare-electron": "node -e \"const fs=require('fs');fs.copyFileSync('public/electron.js','build/electron.js');fs.copyFileSync('public/preload.js','build/preload.js');\"",
		"package-windows": "npm run clean && npm run build && npm run prepare-electron && electron-builder -w -c.extraMetadata.main=build/electron.js",
		"package-mac": "npm run clean && npm run build && npm run prepare-electron && electron-builder build -m -c.extraMetadata.main=build/electron.js",
		"package-linux": "npm run clean && npm run build && npm run prepare-electron && electron-builder -l -c.extraMetadata.main=build/electron.js"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@babel/plugin-proposal-private-property-in-object": "^7.21.11",
		"concurrently": "^8.1.0",
		"cross-env": "^7.0.3",
		"electron": "^25.0.1",
		"electron-builder": "^24.4.0",
		"rimraf": "^5.0.10",
		"wait-on": "^7.0.1"
	},
	"build": {
		"appId": "sqlite.electron-test.app",
		"productName": "SQLite Electron",
		"files": [
			"build/**/*",
			"node_modules/**/*",
			"public/**/*"
		],
		"directories": {
			"buildResources": "public"
		},
		"extraResources": [
			"./demo_table.db"
		]
	}
}
